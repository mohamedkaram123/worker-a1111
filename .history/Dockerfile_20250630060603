# Ø¥Ù†Ø´Ø§Ø¡ Ù…Ø¬Ù„Ø¯Ø§Øª Ø§Ù„Ù†Ù…Ø§Ø°Ø¬
RUN mkdir -p /models/Stable-diffusion \
             /models/ControlNet \
